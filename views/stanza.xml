<?xml version="1.0" encoding="utf-8"?>
<odoo>


    <!-- stanza form-->
    <record model="ir.ui.view" id="hospital_stanza_form">
        <field name="name">hospital.stanza.form</field>
        <field name="model">hospital.stanza</field>
        <field name="arch" type="xml">
            <form>
<!--da continuare-->
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="reparto_id"/>
                    </group>
                </sheet>


            </form>
        </field>
    </record>
<!--action stanza-->
    <record id="action_stanze" model="ir.actions.act_window">
            <field name="name">Stanze</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">hospital.stanza</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{}</field>
            <field name="domain">[]</field>
            <field name="help">This wizard will validate all journal entries selected. Once journal entries are validated, you can not update them anymore.</field>
    </record>

    <!--menu reparti-->
    <menuitem name="Stanze"
        id="hospital_stanze_root"
        parent="hospital_root"/>
              <!--sequence="1"-->

    <menuitem name="Stanze"
        id="hospital_stanze"
        parent="hospital_stanze_root" action="action_stanze"
        />
</odoo>