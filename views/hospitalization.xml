<?xml version="1.0" encoding="utf-8"?>
<odoo>
<!-- room form-->
    <record model="ir.ui.view" id="hospital_hospitalization_form">
        <field name="name">hospital.hospitalization.form</field>
        <field name="model">hospital.hospitalization</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="paziente_id"/>
                    <field name="doctor_id"/>
                    <field name="date_hospitalization_in"/>
                    <field name="date_hospitalization_out"/>
                    <field name="disease"/>
                    <field name="room_id"/>
                </group>

            </form>
        </field>
    </record>
<!--action room-->
    <record id="action_hospitalization" model="ir.actions.act_window">
            <field name="name">Hospitalization</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">hospital.hospitalization</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{}</field>
            <field name="domain">[]</field>
            <field name="help">This wizard will validate all journal entries selected. Once journal entries are validated, you can not update them anymore.</field>
    </record>
<!--menu rooms-->
    <menuitem name="Hospitalization"
        id="hospital_hospitalization_root"
        parent="hospital_root"
    />
    <menuitem name="Hospitalization"
        id="hospital_hospitalization"
        parent="hospital_hospitalization_root" action="action_hospitalization"
    />
</odoo>
